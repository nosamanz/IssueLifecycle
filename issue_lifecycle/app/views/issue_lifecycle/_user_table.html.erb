<div id="userTableContainer" class="table table-responsive-sm "></div>
	<table class="table table-dark display table-striped" style="width:100%">
		<thead class="thead-dark">
			<tr>
				<th class="thCl" data-sortable="true">
					<%= l(:label_user) %>
				</th>
				<th class="thCl" data-sortable="true">
					<%= l(:label_issue_numbers) %>
				</th>
				<th class="thCl" data-sortable="true">
					<%= l(:label_spent_time) %>
				</th>
			</tr>
		</thead>
		<tbody>
			<% @user_spent_time[:users].each do |user| %>
				<tr>
					<td>
						<%= user[:name] %>
					</td>
					<td class="isId">
						<% user[:time_entries].each_with_index do | time_entry, index| %>
							<% if index < 3 %>
								<strong><%= l(:label_issue) + ' #' + time_entry[:issue_id].to_s + ' : ' %></strong><%= time_entry[:hours].to_s + l(:label_hour) %><br>
							<% else %>
								<span id="it" class="additional" style="display: none;"><strong><%= l(:label_issue) + ' #' + time_entry[:issue_id].to_s + ' : ' %></strong><%= time_entry[:hours].to_s + l(:label_hour) %><br></span>
							<% end %>
						<% end %>
						<% if user[:time_entries].length > 3 %>
							<button id="it" class="showMoreBtn">...</button>
						<% end %>
					</td>
					<td class="totalHours">
						<%= user[:total_hours] %> <%= l(:label_hour) %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<div id="userChart"></div>